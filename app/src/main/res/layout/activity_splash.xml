<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splashscreen_bg"
    android:orientation="vertical"
    android:scaleType="centerCrop"
    android:gravity="center">
    <!--android:background="@drawable/fela"-->

    <TextView
        android:id="@+id/application_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mp.margin.xlarge"
        android:layout_marginRight="@dimen/mp.margin.xlarge"
        android:layout_marginBottom="@dimen/mp.margin.normal"
        android:gravity="center"
        android:textSize="38sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/kings_studio"
        android:singleLine="true"
        android:shadowColor="@color/black"
        android:shadowDx="-4"
        android:shadowDy="2"
        android:shadowRadius="15"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-9dp"
        android:text="@string/we_love_your_music"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        android:shadowDx="-4"
        android:shadowDy="2"
        android:shadowRadius="15"/>


</LinearLayout>