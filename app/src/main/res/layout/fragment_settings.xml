<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:scrollbars="none"
    tools:context="com.musicplayer.aow.ui.settings.SettingsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/audio_search_settings_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="@color/transparent"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#DDF9DD"
                android:text="Search for local audio files:"/>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:layout_marginBottom="2dp"
                android:layout_below="@+id/gesture_settings_label"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                card_view:cardUseCompatPadding="true"
                tools:ignore="UnknownId">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:background="#9CCCBD">
                    <TextView
                        android:id="@+id/search_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="6dp"
                        android:text="Search Audio"
                        android:layout_alignParentLeft="true"/>

                    <Button
                        android:id="@+id/search_audio"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="0dp"
                        android:layout_alignParentRight="true"
                        android:text="search"
                        android:textColor="@color/black"
                        android:background="@drawable/pop_up_gb"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>



            <TextView
                android:id="@+id/gesture_settings_label"
                android:layout_below="@+id/card_view_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="@color/transparent"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#DDF9DD"
                android:text="Gesture control settings:"/>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:layout_marginBottom="2dp"
                android:layout_below="@+id/gesture_settings_label"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:background="#9CCCBD"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9CCCBD">
                    <RelativeLayout
                        android:id="@+id/shake_section"
                        android:layout_marginBottom="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:background="#9CCCBD">
                            <TextView
                                android:id="@+id/shake"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="6dp"
                                android:text="Enable shake detection"
                                android:layout_alignParentLeft="true"/>
                            <Switch
                                android:id="@+id/shake_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal"
                                >
                            </Switch>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/flip_section"
                        android:layout_below="@+id/shake_section"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:background="#9CCCBD">
                        <TextView
                            android:id="@+id/flip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="6dp"
                            android:text="Enable flip detection"
                            android:layout_alignParentLeft="true"/>
                        <Switch
                            android:id="@+id/flip_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal"
                            >
                        </Switch>
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>




            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/equalizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:layout_marginBottom="2dp"
                android:layout_below="@+id/gesture_settings_label"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                card_view:cardUseCompatPadding="true"
                tools:ignore="UnknownId">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:background="#9CCCBD">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <SeekBar
                            android:id="@+id/Band1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="200"
                            android:progress="100" />



                        <SeekBar
                            android:id="@+id/Band2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="100" android:max="200"/>


                        <SeekBar
                            android:id="@+id/Band3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="100" android:max="200"/>



                        <SeekBar
                            android:id="@+id/Band4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="100" android:max="200"/>



                        <SeekBar
                            android:id="@+id/Band5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="100" android:max="200"/>


                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Large Text"
                            android:textAppearance="?android:attr/textAppearanceLarge" />


                        <LinearLayout
                            android:id="@+id/linearLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1" >





                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:text="Medium Text"
                                android:textAppearance="?android:attr/textAppearanceMedium" />





                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:text="Medium Text"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>
    </RelativeLayout>
</ScrollView>
